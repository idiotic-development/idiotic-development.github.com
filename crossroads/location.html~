	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
	<script type="text/javasctipt" src="js/css3finalize.min.js"></script><script type="text/javasctipt" src="js/css3finalize.min.js"></script>
	<script type="text/javascript" src="js/jquery.all.js"></script>
	<script type="text/javascript" src="js/supersized.3.1.3.min.js"></script>
	<script type="text/javascript" src="js/background.js"></script>
	<script type="text/javascript">
		$(document).ready(function()
		{
			$('#load').click(function (event)
			{
				$('#load').parent().html("<iframe width=\"390\" height=\"350\" frameborder=\"0\" scrolling=\"no\" marginheight=\"0\" marginwidth=\"0\" src=\"http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=calvary+chapel+vista&amp;aq=&amp;sll=37.996163,-95.712891&amp;sspn=29.372909,86.572266&amp;ie=UTF8&amp;hq=calvary+chapel+vista&amp;hnear=Calvary+Chapel+of+Vista,+885+E+Vista+Way,+Vista,+California+92084-5237&amp;cid=141871096952721790&amp;ll=33.221241,-117.232361&amp;spn=0.025131,0.036478&amp;z=14&amp;iwloc=A&amp;output=embed\"></iframe>")
			});
			
			//get and display directions
			$("#button").click(function (event)
			{
				var dirSer = new google.maps.DirectionsService();
				dirSer.route(
				{
					origin: $('#start').attr("value"),
					destination: "885 East Vista Way Vista, CA 92084",
					travelMode: google.maps.DirectionsTravelMode.DRIVING,
					unitSystem: google.maps.DirectionsUnitSystem.IMPERIAL,
					provideRouteAlternatives: false,
					avoidTolls: true
				}, function(result, status)
				{
					console.log(result);
					var steps = [];
					
					$.each(result.routes[0].legs[0].steps, function(i, step)
					{
						steps[i] = "<div id=\"step\">" + (i+1) + ". " + step.instructions + "</div>";
					})
					$('#directions').html("<div id=\"step\"><b>Origin: " + result.If.origin + "</b></div>" + steps.join('') + "<div style='margin-top: 10px'><b>Destination: " + result.If.destination + "</b></div>");
				});
			});
			$("input").focus(function (event)
			{
				$(this).css("border", "2px solid #4080FF");
				if ($(this).attr("value") == "Starting address . . .")
					$(this).attr("value", "");
			});
			$("input").blur(function (event)
			{
				$(this).css("border", "1px solid #777777");
				if ($(this).attr("value") == "")
					$(this).attr("value", "Starting address . . .");
			});
		});
	</script>
	<style type="text/css">
		#load
		{
