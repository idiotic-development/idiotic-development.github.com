			behavior: url(styles/PIE.htc);
		}
		
		#step
		{
			border-bottom: 1px solid #999999;
			padding: 10px 0;
		}
		
		#directions
		{
			background-color: #222222;
			border: 1px solid #333333;
			margin: 10px 0;
			padding: 10px;
			min-height: 290px;
		}
		.float
		{
			margin: 0 18px;
			width: 45%;
			float: left;
		}
