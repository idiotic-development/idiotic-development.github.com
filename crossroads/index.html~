	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
	<script type="text/javasctipt" src="js/css3finalize.min.js"></script>
	<script type="text/javascript" src="js/jquery.all.js"></script>
	<script type="text/javascript" src="js/date.format.js"></script>
	<script type="text/javascript" src="js/supersized.3.1.3.min.js"></script>
	<script type="text/javascript" src="js/background.js"></script>
	<script type="text/javascript">
		$(document).ready(function()
		{
			//get and display events from google calendor
			var now = new Date();
			var end = new Date();
			end.setDate(now.getDate()+7);
			$.getJSON("http://www.google.com/calendar/feeds/crossroadsvista@gmail.com/public/full",
				"orderby=starttime&start-min=" + now.format("isoDate") + "&start-max="+ end.format("isoDate") +"&sortorder=a&alt=json&fields=entry(title,content,gd:where,gd:when,gd:recurrence)",
				function (json)
				{
					var items = [];

					$.each(json.feed.entry, function(i, entry)
					{
						if ($.trim(entry.title.$t) != "Worship Service")
						{
							$.each (entry.gd$when, function(i, when)
							{
								var date = new Date(when.startTime.substring(0, 4),
									when.startTime.substring(5, 7)-1,
									when.startTime.substring(8, 10),
									when.startTime.substring(11, 13),
									when.startTime.substring(14, 16));
								var index = (date.getMonth() == now.getMonth()) ? date.getDate()-now.getDate() : 31-now.getDate()+date.getDate();
								items[index] = "<li><b>" + entry.title.$t +
									"</b><br />" + entry.content.$t +
									"<br /><i>Where: " + entry.gd$where[0].valueString +
									"<br />When: " + date.format("m.dd.yyyy h:Mtt") +
									"</i></li><br />";
							});
						}
					});
					$('<ul/>', {
						html: items.join('')
					}).appendTo('#events');
				});
		});
	</script>
	<style>
		.float
		{
			margin: 0 18px;
			width: 45%;
			float: left;
		}
	</style>
