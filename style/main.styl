---
---
@import url("https://fonts.googleapis.com/css?family=Poiret+One|Nixie+One")
@import "CentraleSans/main.css";

fg=#808080
highlight=#e42c60

body
	color fg
	font-family "Centrale Sans"
	line-height 1.5em

	h1, h2, h3
		color highlight
		font-weight 300
		font-family "Poiret One"
		margin-top 60px
		line-height normal

	h1
		font-size 4em
		margin-left -25px
		margin-bottom 80px

	h2
		font-size 2.5em
		margin-left -20px

	h3
		font-size 2em
		margin-left 15px

	strong
		font-weight 300
		color darken(fg, 30%)

	a
		color highlight
		text-decoration none

		&:focus
			outline none

		&:hover
			color darken(highlight, 30%)
			border-bottom 1px dotted darken(highlight, 30%)

	ul li
		position relative
		list-style-type none

		&::before
			content ' '
			position absolute
			left -20px
			// background-color #eeeeee
			border 1px solid #dfdfdf
			width 10px
			height 10px
			border-radius 50%

	ol
		counter-reset counter

		li
			position relative
			list-style-type none

			&::before
				content counter(counter)
				counter-increment counter
				position absolute
				left -60px
				top -5px
				font-size 3em
				line-height 1em
				font-style italic
				text-align right
				width 30px

#header
	width 350px

	header a
		display block

		&:hover
			border-width 0

		img
			width 250px
			margin 50px 0 15px 10px


	nav
		display block
		width 80%

		span
			display block
			position absolute
			left 45px
			width 1px
			height 20px
			background-color highlight
			transition top 0.5s

		li
			list-style-type none

			&::before
				border-width 0

			a
				display block
				color fg
				border-width 0
				font-family "Nixie One"
				padding 10px

				&:hover
					color darken(fg, 30%)

#links
	position absolute
	top 30px
	right 30px
	z-index 4

	a:hover
		border-width 0

	img
		width 38px
		opacity 0.1
		vertical-align bottom
		margin 2px

		&:hover
			opacity 0.8

.lineno
	margin-right 20px
	color #dddddd

main
	display block
	position relative
	bottom 30px
	margin 0 50px 0 300px

@media only screen and (max-width: 1000px)
	main
		margin 20px

	#header
		width 100%

		header a
			border-width 0

			img
				width 90%

// Page styles

.index
	#header
		width 100%

		header a
			position absolute
			bottom calc(50% - 30px)
			width 100%
			margin 0
			text-align center
			border-width 0

			img
				width 50%

		nav
			span
				display none

			ul
				position absolute
				bottom calc(50% - 100px)
				width 100%
				text-align center
				padding 0

				li
					display inline-block
					position relative

					&::after
						content ""
						position absolute
						bottom 0
						left 15px
						height 1px
						width 0
						background-color #e42c60
						transition width 1s

					&:hover::after
						width 35px

.post
	#disqus_thread
		margin-top 100px

	header
		display inline-block
		position relative

		time
			position absolute
			bottom 55px
			right -25px
			font-family "Poiret One"
			letter-spacing 2px

	#nav
		text-align center
		margin 20px

.portfolio
	.flow
		font-size 0

		a
			position relative
			width 32%
			display inline-block

			img
				width 100%
				vertical-align top

			span
				display block
				position absolute
				bottom 0
				left 0
				height 0
				width calc(100% - 20px)
				background-color rgba(0, 0, 0, 0.6)
				color lighten(#5d5d5d, 80%)
				font-size 15px
				padding 0 10px
				overflow hidden

			&:hover
				border-width 0

				span
					height 20px
					padding 7px 10px

	@media only screen and (max-width: 1000px)
		.flow a
			width 49%

	@media only screen and (max-width: 600px)
		.flow a
			width 100%

.projects
	main a
		display block
		position relative
		height 150px
		color #8d8d8d
		margin 50px 0
		padding-left 10px
		min-width 470px

		&:hover
			border-width 0
			color @color

		&::after
			content ""
			position absolute
			height 1px
			width 0
			bottom 0
			left 0
			background-color #e42c60
			transition width 0.5s ease-out

		&:hover::after
			width 100px
			transition-duration 1s

		span
			display inline-block
			width 300px
			height 100%

			h2
				margin 40px 0 30px 0
				color #5d5d5d

		img
			vertical-align bottom
