---
@keyframes fadeOut
	from
		opacity 1

	to
		opacity 0

@keyframes fadeIn
	from
		opacity 0

	to
		opacity 1

@keyframes itemEnter
	from
		opacity 0
		left 5px

	50%
		left 0

	to
		opacity 1
		left 0

.transitionOut
	animation 0.5s both fadeOut

.transitionIn
	animation 1s both fadeIn

.screenIn
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	z-index 1
	background-color #ffffff
	animation 0.5s fadeIn both

.screenOut
	animation 1s fadeOut both

.index
	header img
		animation 2s 0.5s fadeIn both

	nav ul
		animation 1s 1s fadeIn both

.projects
	.transitionIn
		animation none

		a:nth-child(1)
			animation 1s itemEnter both

		a:nth-child(2)
			animation 1s 0.2s itemEnter both

